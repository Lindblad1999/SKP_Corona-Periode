<Window x:Class="Pizzaria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizzaria"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBoxPizzas" Margin="402,30,190,85" Background="#FFF0FB01" SelectionChanged="listBoxPizzas_SelectionChanged"/>
        <CheckBox x:Name="checkBox_Small" Content="Small" HorizontalAlignment="Left" Margin="607,10,0,0" VerticalAlignment="Top" Checked="checkBox_Small_Checked"/>
        <CheckBox x:Name="checkBox_Medium" Content="Medium" HorizontalAlignment="Left" Margin="607,30,0,0" VerticalAlignment="Top" Checked="checkBox_Medium_Checked"/>
        <CheckBox x:Name="checkBox_Large" Content="Large" HorizontalAlignment="Left" Margin="607,50,0,0" VerticalAlignment="Top" Checked="checkBox_Large_Checked"/>
        <ListBox x:Name="listBoxIngredients" Margin="607,99,10,45" Background="#FF00D814"/>
        <Label x:Name="lblMenu" Content="Pizzas:" HorizontalAlignment="Left" Margin="402,4,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblIngredients" Content="Ingredients:" HorizontalAlignment="Left" Margin="607,70,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPrice" Content="Price:" HorizontalAlignment="Left" Margin="407,379,0,0" VerticalAlignment="Top"/>
        <Button x:Name="brnAddToBasket" Content="Add to basket" HorizontalAlignment="Left" Margin="402,344,0,45" Width="80" Click="brnAddToBasket_Click"/>
        <Button x:Name="btnEditPizza" Content="Edit" HorizontalAlignment="Left" Margin="522,344,0,45" Width="80" Click="btnEditPizza_Click"/>
        <Button x:Name="btnViewBasket" Content="View Basket" HorizontalAlignment="Left" Margin="10,344,0,0" VerticalAlignment="Top" Width="86" Height="65" Click="btnViewBasket_Click"/>
        <ListBox x:Name="listBoxDrinks" Margin="132,30,460,85" Background="#FF0173FB" SelectionChanged="listBoxDrinks_SelectionChanged"/>
        <Label x:Name="lblDrinks" Content="Drinks: " HorizontalAlignment="Left" Margin="132,4,0,0" VerticalAlignment="Top"/>
        <Button x:Name="brnAddDrinkToBasket" Content="Add to basket" HorizontalAlignment="Left" Margin="132,344,0,45" Width="80" Click="brnAddDrinkToBasket_Click"/>
        <Label x:Name="lblDrinkPrice" Content="Price:" HorizontalAlignment="Left" Margin="132,379,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox_SmallDrink" Content="Small" HorizontalAlignment="Left" Margin="47,30,0,0" VerticalAlignment="Top" Checked="checkBox_SmallDrink_Checked"/>
        <CheckBox x:Name="checkBox_MediumDrink" Content="Medium" HorizontalAlignment="Left" Margin="47,50,0,0" VerticalAlignment="Top" Checked="checkBox_MediumDrink_Checked"/>
        <CheckBox x:Name="checkBox_LargeDrink" Content="Large" HorizontalAlignment="Left" Margin="47,70,0,0" VerticalAlignment="Top" Checked="checkBox_LargeDrink_Checked"/>

    </Grid>
</Window>
